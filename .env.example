# Screen Time Casino - Environment Variables Example
# Copy this file to .env and configure for your environment

# Development Mode Settings
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_ENVIRONMENT=development

# Casino Development Overrides
EXPO_PUBLIC_UNLIMITED_SPINS=true
EXPO_PUBLIC_DEV_SPINS_PER_DAY=999
EXPO_PUBLIC_UNLOCK_ALL_GAMES=true
EXPO_PUBLIC_BYPASS_SUBSCRIPTION=true

# Testing & Debugging
EXPO_PUBLIC_SHOW_DEBUG_INFO=true
EXPO_PUBLIC_ENABLE_TEST_BUTTONS=true
EXPO_PUBLIC_SKIP_ANIMATIONS=false
EXPO_PUBLIC_MOCK_SCREEN_TIME_API=true

# Casino Game Testing
EXPO_PUBLIC_GUARANTEED_WINS=false
EXPO_PUBLIC_GUARANTEED_LOSSES=false
EXPO_PUBLIC_SHOW_GAME_DEBUG=false
EXPO_PUBLIC_ALLOW_NEGATIVE_SCREEN_TIME=true

# Subscription & Monetization
EXPO_PUBLIC_SUBSCRIPTION_PRICE=2.99
EXPO_PUBLIC_REVENUE_CAT_API_KEY=your_revenue_cat_key_here

# Screen Time Limits (minutes)
EXPO_PUBLIC_MIN_SCREEN_TIME=30
EXPO_PUBLIC_MAX_SCREEN_TIME=720